<%= render 'shared/page_title', title: "Chef #{@chef.chefname}'s profile" %>

<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for @chef, size: 180 %>
  </div>
</div>
<h4 align="center"><%= @chef.chefname %>'s recipes</h4>
<% @chef.recipes.each do |recipe| %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2 well">
      <h4><%= link_to recipe.name, recipe_path(recipe) %></h4>
      <p><%= truncate(recipe.description, length: 150) %></p>
      <p>
        <span class="quiet">Created <small><%= time_ago_in_words(recipe.created_at) %></small> ago</span>
      </p>
    </div>
  </div>
<% end %>